{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Blood",
  "scopeName": "source.blood",
  "patterns": [
    { "include": "#comments" },
    { "include": "#strings" },
    { "include": "#characters" },
    { "include": "#numbers" },
    { "include": "#keywords" },
    { "include": "#types" },
    { "include": "#functions" },
    { "include": "#macros" },
    { "include": "#attributes" },
    { "include": "#operators" },
    { "include": "#punctuation" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.documentation.blood",
          "match": "///.*$"
        },
        {
          "name": "comment.line.module-documentation.blood",
          "match": "//!.*$"
        },
        {
          "name": "comment.line.double-slash.blood",
          "match": "//.*$"
        },
        {
          "name": "comment.block.documentation.blood",
          "begin": "/\\*\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        },
        {
          "name": "comment.block.blood",
          "begin": "/\\*",
          "end": "\\*/",
          "patterns": [
            { "include": "#comments" }
          ]
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.blood",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.blood",
              "match": "\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]{1,6}\\}|[nrt\\\\\"'0])"
            }
          ]
        },
        {
          "name": "string.quoted.raw.blood",
          "begin": "r(#*)\"",
          "end": "\"\\1"
        }
      ]
    },
    "characters": {
      "patterns": [
        {
          "name": "string.quoted.single.blood",
          "match": "'(\\\\(x[0-9A-Fa-f]{2}|u\\{[0-9A-Fa-f]{1,6}\\}|[nrt\\\\\"'0])|[^'\\\\])'"
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.hex.blood",
          "match": "\\b0x[0-9A-Fa-f_]+\\b"
        },
        {
          "name": "constant.numeric.octal.blood",
          "match": "\\b0o[0-7_]+\\b"
        },
        {
          "name": "constant.numeric.binary.blood",
          "match": "\\b0b[01_]+\\b"
        },
        {
          "name": "constant.numeric.float.blood",
          "match": "\\b[0-9][0-9_]*(\\.[0-9][0-9_]*)?([eE][+-]?[0-9_]+)?(f32|f64)?\\b"
        },
        {
          "name": "constant.numeric.integer.blood",
          "match": "\\b[0-9][0-9_]*(i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize)?\\b"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.blood",
          "match": "\\b(if|else|match|loop|while|for|in|break|continue|return|try)\\b"
        },
        {
          "name": "keyword.declaration.blood",
          "match": "\\b(fn|let|mut|const|static|type|struct|enum|union|trait|impl|mod|use|pub|crate|super|self|Self)\\b"
        },
        {
          "name": "keyword.effect.blood",
          "match": "\\b(effect|handler|handle|with|do|resume)\\b"
        },
        {
          "name": "keyword.async.blood",
          "match": "\\b(async|await)\\b"
        },
        {
          "name": "keyword.unsafe.blood",
          "match": "\\b(unsafe|extern)\\b"
        },
        {
          "name": "keyword.operator.blood",
          "match": "\\b(as|where|dyn|move|ref|box)\\b"
        },
        {
          "name": "constant.language.boolean.blood",
          "match": "\\b(true|false)\\b"
        },
        {
          "name": "constant.language.null.blood",
          "match": "\\b(None)\\b"
        },
        {
          "name": "variable.language.blood",
          "match": "\\b(self|Self)\\b"
        }
      ]
    },
    "types": {
      "patterns": [
        {
          "name": "storage.type.primitive.blood",
          "match": "\\b(bool|char|str|i8|i16|i32|i64|i128|isize|u8|u16|u32|u64|u128|usize|f32|f64)\\b"
        },
        {
          "name": "storage.type.core.blood",
          "match": "\\b(String|Vec|Option|Result|Box|HashMap|HashSet|Rc|Arc|Cell|RefCell)\\b"
        },
        {
          "name": "entity.name.type.blood",
          "match": "\\b[A-Z][A-Za-z0-9_]*\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.blood",
          "match": "\\b([a-z_][a-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.blood" }
          }
        },
        {
          "name": "entity.name.function.method.blood",
          "match": "\\.([a-z_][a-z0-9_]*)\\s*(?=\\()",
          "captures": {
            "1": { "name": "entity.name.function.method.blood" }
          }
        }
      ]
    },
    "macros": {
      "patterns": [
        {
          "name": "entity.name.function.macro.blood",
          "match": "\\b([a-z_][a-z0-9_]*)!",
          "captures": {
            "1": { "name": "entity.name.function.macro.blood" }
          }
        }
      ]
    },
    "attributes": {
      "patterns": [
        {
          "name": "meta.attribute.blood",
          "begin": "#!?\\[",
          "end": "\\]",
          "patterns": [
            {
              "name": "entity.name.attribute.blood",
              "match": "\\b([a-z_][a-z0-9_]*)\\b"
            },
            { "include": "#strings" },
            { "include": "#punctuation" }
          ]
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.comparison.blood",
          "match": "(==|!=|<=|>=|<|>)"
        },
        {
          "name": "keyword.operator.assignment.blood",
          "match": "(\\+=|-=|\\*=|/=|%=|&=|\\|=|\\^=|<<=|>>=|=)"
        },
        {
          "name": "keyword.operator.arithmetic.blood",
          "match": "(\\+|-|\\*|/|%)"
        },
        {
          "name": "keyword.operator.logical.blood",
          "match": "(&&|\\|\\||!)"
        },
        {
          "name": "keyword.operator.bitwise.blood",
          "match": "(&|\\||\\^|~|<<|>>)"
        },
        {
          "name": "keyword.operator.range.blood",
          "match": "(\\.\\.\\.|\\.\\.|\\.\\.=)"
        },
        {
          "name": "keyword.operator.arrow.blood",
          "match": "(->|=>)"
        },
        {
          "name": "keyword.operator.question.blood",
          "match": "\\?"
        },
        {
          "name": "keyword.operator.namespace.blood",
          "match": "::"
        }
      ]
    },
    "punctuation": {
      "patterns": [
        {
          "name": "punctuation.semi.blood",
          "match": ";"
        },
        {
          "name": "punctuation.comma.blood",
          "match": ","
        },
        {
          "name": "punctuation.colon.blood",
          "match": ":"
        },
        {
          "name": "punctuation.dot.blood",
          "match": "\\."
        },
        {
          "name": "punctuation.brackets.round.blood",
          "match": "[()]"
        },
        {
          "name": "punctuation.brackets.square.blood",
          "match": "[\\[\\]]"
        },
        {
          "name": "punctuation.brackets.curly.blood",
          "match": "[{}]"
        },
        {
          "name": "punctuation.brackets.angle.blood",
          "match": "[<>]"
        }
      ]
    }
  }
}

// Test: tuple pattern matching on enum values
// EXPECT: 6
enum Color {
    Red,
    Green,
    Blue,
}

fn pair_match(a: Color, b: Color) -> i32 {
    match (a, b) {
        (Color::Red, Color::Blue) => 1,
        (Color::Green, Color::Red) => 2,
        (Color::Blue, Color::Green) => 3,
        _ => 0,
    }
}

fn main() -> i32 {
    // Test specific arm matching
    let r1: i32 = pair_match(Color::Red, Color::Blue);     // 1
    let r2: i32 = pair_match(Color::Green, Color::Red);    // 2
    let r3: i32 = pair_match(Color::Blue, Color::Green);   // 3
    let r4: i32 = pair_match(Color::Red, Color::Red);      // 0 (wildcard)
    let r5: i32 = pair_match(Color::Green, Color::Green);  // 0 (wildcard)

    let total: i32 = r1 + r2 + r3;
    if r1 != 1 { return 1; }
    if r2 != 2 { return 1; }
    if r3 != 3 { return 1; }
    if r4 != 0 { return 1; }
    if r5 != 0 { return 1; }

    println_int(total); // 6
    0
}

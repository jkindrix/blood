// ============================================================
// Use Module Path Resolution
// ============================================================

/// Resolves a dot-separated module path (e.g., std.collections.hashmap) using global scope lookup.
/// Returns the DefId of the final module in the path, or None if any segment is not found.
fn resolve_use_module_path(
    ctx: &mut hir_lower_ctx::LoweringCtx,
    path: &Vec<common::SpannedSymbol>,
) -> Option<hir_def::DefId> {
    if path.len() == 0 {
        return Option::None;
    }
    // Lookup first segment in global scope
    let first_str = ctx.span_to_string(path[0].span);
    let first_sym = ctx.intern(first_str.as_str());
    let first_lookup = ctx.resolver.lookup(first_sym);
    if !first_lookup.is_some() {
        return Option::None;
    }
    let first_result = first_lookup.unwrap();
    let first_binding = ctx.resolver.scope_binding(first_result.scope_index, first_result.binding_index);
    let mut current_def = first_binding.def_id;
    // Walk remaining segments via lookup_in_parent
    let mut seg_idx: usize = 1;
    while seg_idx < path.len() {
        let seg_str = ctx.span_to_string(path[seg_idx].span);
        let seg_sym = ctx.intern(seg_str.as_str());
        let child = ctx.resolver.lookup_in_parent(current_def, seg_sym);
        if !child.is_some() {
            return Option::None;
        }
        current_def = child.unwrap();
        seg_idx = seg_idx + 1;
    }
    Option::Some(current_def)
}

/// Resolves a dot-separated module path starting from a parent DefId.
/// Used for `use` declarations inside module blocks where the first segment
/// is a child of the parent module.
fn resolve_use_module_path_in_parent(
    ctx: &mut hir_lower_ctx::LoweringCtx,
    parent_def_id: hir_def::DefId,
    path: &Vec<common::SpannedSymbol>,
) -> Option<hir_def::DefId> {
    if path.len() == 0 {
        return Option::None;
    }
    // Lookup first segment as a child of parent
    let first_str = ctx.span_to_string(path[0].span);
    let first_sym = ctx.intern(first_str.as_str());
    let first_lookup = ctx.resolver.lookup_in_parent(parent_def_id, first_sym);
    if !first_lookup.is_some() {
        return Option::None;
    }
    let mut current_def = first_lookup.unwrap();
    // Walk remaining segments via lookup_in_parent
    let mut seg_idx: usize = 1;
    while seg_idx < path.len() {
        let seg_str = ctx.span_to_string(path[seg_idx].span);
        let seg_sym = ctx.intern(seg_str.as_str());
        let child = ctx.resolver.lookup_in_parent(current_def, seg_sym);
        if !child.is_some() {
            return Option::None;
        }
        current_def = child.unwrap();
        seg_idx = seg_idx + 1;
    }
    Option::Some(current_def)
}

